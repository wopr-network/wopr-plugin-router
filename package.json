{
  "description": "Message routing middleware for WOPR",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.3",
    "esbuild": "^0.25.0",
    "jsdom": "^28.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "name": "@wopr-network/wopr-plugin-router",
  "scripts": {
    "build": "tsc && npm run build:ui",
    "build:ui": "esbuild src/ui.ts --bundle --format=esm --outfile=dist/ui.js --target=es2020",
    "check": "biome check src/ && tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "format": "biome format --write src/",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "prepublishOnly": "npm run build",
    "test": "vitest run"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "0.3.0",
  "wopr": {
    "minVersion": "1.0.0",
    "type": "plugin"
  },
  "publishConfig": {
    "access": "public"
  }
}
