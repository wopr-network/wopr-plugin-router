{
  "description": "Message routing middleware for WOPR",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^22.0.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "name": "wopr-plugin-router",
  "scripts": {
    "build": "tsc && npm run build:ui",
    "build:ui": "esbuild src/ui.ts --bundle --format=esm --outfile=dist/ui.js --target=es2020",
    "check": "biome check src/ && tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "format": "biome format --write src/",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "prepublishOnly": "npm run build"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "0.3.0",
  "wopr": {
    "minVersion": "1.0.0",
    "type": "plugin"
  }
}
